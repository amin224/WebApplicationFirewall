@{
    ViewData["Title"] = "Error";
}

<h2>An Error Occurred</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}
else
{
    <div class="alert alert-danger">
        An unexpected error occurred. Please try again later.
    </div>
}
